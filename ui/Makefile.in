SHELL= /bin/sh

CC= gcc

MAKE= make

SUBDIRS= gtk-gui java-gui 

V= @ 

all: makefiles build

makefiles:
	${V}for subdir in ${SUBDIRS}; \
	do \
		echo "...start generating Makefiles in $$subdir..." ; \
		cd ./$$subdir && cp -u Makefile.in Makefile && cd .. ; \
		${MAKE} $@ -C $$subdir; \
		echo ".....end generating Makefiles in $$subdir..." ; \
		echo "" ; \
	done;
	
build clean clobber:	
	${V}for subdir in ${SUBDIRS}; \
	do \
		echo "...start $@ing in $$subdir..." ; \
		${MAKE} $@ -C $$subdir; \
		echo ".....end $@ing in $$subdir..." ; \
		echo "" ; \
	done; 
